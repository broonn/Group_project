@model IEnumerable<ModelPoco.Product>

@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@



<table class="table">
    <tr>
        <th>
            Title

        </th>
        <th>
            Author

        </th>

        <th>
            Price
        </th>
        <th>
            Buy
        </th>
        <th></th>
    </tr>

    @foreach (ModelPoco.Product p in Model)
    {
        <tr>
            <td>
                @p.Title

            </td>
            <td>
                @p.Author

            </td>

            <td>
                @p.Price
            </td>

            <td>
                @Html.ActionLink("Details", "Details", "Product", new { id = p.ProductID }, null) |

                @Html.ActionLink("Order Now", "Cart", "ShoppingCart", new { id = p.ProductID }, null)
               
            </td>
        </tr>
    }

</table>
