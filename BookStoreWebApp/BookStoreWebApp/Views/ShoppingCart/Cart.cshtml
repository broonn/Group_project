
@{
    ViewBag.Title = "Cart";
}
@using BookStoreWebApp.Controllers
<h2>Cart</h2>

<table class="table">
    <tr>

        <th>
            Title

        </th>
        <th>
            Author

        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Subtotal
        </th>
        <th></th>
    </tr>
    @{
        decimal s = 0;
    }
    @foreach (Item item in (List<Item>)Session["cart"])
    {
        s = s + item.Pr.Price * item.Quantity;

        <tr>

            <td>
                @item.Pr.Title

            </td>
            <td>
                @item.Pr.Author

            </td>

            <td>
                @item.Pr.Price
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @(item.Pr.Price * item.Quantity)
            </td>
            <td>
               
                @*@Html.ActionLink("Details", "Details", "Product", new { id = item.Pr.ProductID }, null) |*@
                @Html.ActionLink("Delete", "Delete", "ShoppingCart", new { id = item.Pr.ProductID }, null) 
            </td>
        </tr>
    }
    <tr>
        <td>
            <p><a class="btn btn-default">Total </a></p> 
        </td>
        <td> </td>
        <td> </td>
        <td> </td>
        <td>@s</td>
    </tr>
</table>
<br />
@Html.ActionLink("Continue Shopping", "Index", "Product")
 
